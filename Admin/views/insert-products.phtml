            <option name="pantolon" value="Pantolon">Pantolon</option>
        </select><br><br>
        Kategori : <select name="cinsiyet">
            <option name="bayan" value="bayan" >Bayan</option>
            <option name="erkek" value="erkek" >Erkek</option>
            <option name="unisex" value="unisex">Unisex</option>
            <option name="genccocuk" value="genccocuk" >Genç-Çocuk</option>
