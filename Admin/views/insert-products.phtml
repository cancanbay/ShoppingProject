            <option name="kirmizi" value="Kırmızı">Kirmizi</option>
            <option name="mavi" value="Mavi">Mavi</option>
        </select><br><br>
        Fotoğraf linki : <input type="text" name="imgUrl"/><br><br>
        Ücret : <input type="text" name="price"/> TL<br><br>
        
        <input type="submit" value="Kaydet"/>
    </form>
